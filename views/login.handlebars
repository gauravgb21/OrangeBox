 

<body class="" style="max-width: 90vw;background: #D1913C;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #FFD194, #D1913C);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #FFD194, #D1913C); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
">

    <div class="" >
            <div class=" row" style="padding-top: 10%">
                <div class="login-logo col-lg-6" style="padding-top: 5%">
                    <a href="/">
                        <img class="align-content" src="images/logo.png" style="max-width: 540px" alt="">
                    </a>
                </div>
                <div class="login-form col-lg-6" style="max-width: 350px;margin-left: 20%;box-shadow: 5px 5px 5px #2d2d2d;">
                    {{#if errors}}
                         {{#each errors}}
                         <div class="w3-container w3-section w3-red">
                    <span onclick="this.parentElement.style.display='none'" class="w3-closebtn">&times;</span>
                      {{msg}}
                    </div>
                         {{/each}}
                    {{/if}}
                    <form style="max-width: 350px;" method="post" action="/users_login">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" name="login" value="login" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                        <div class="register-link m-t-15 text-center">
                            <p>Don't have account ? <a href="/register"> Sign Up Here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="assets/js/main.js"></script>
    <script  src="js/index.js"></script>

</body>